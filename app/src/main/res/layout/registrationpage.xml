<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/registration_logo"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Registration Form"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registration_logo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Enter Your Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_below="@id/name_msg"
            android:layout_marginLeft="90dp"
            android:layout_weight="100"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/create_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="71dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="112dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/username_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Enter Your Email Id"
            android:textColor="#000000"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/Email_id"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_below="@id/create_username_text"
            android:layout_marginLeft="90dp"
            android:layout_weight="100"
            android:ems="10"
            android:hint="Email id"
            android:inputType="text" />

        <TextView
            android:id="@+id/create_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Email_id"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Create Your Password"
            android:textColor="#000000"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/create_password"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_below="@id/create_password_text"
            android:layout_marginLeft="90dp"
            android:layout_weight="100"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/confirm_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_password"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Confirm Your Password"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_below="@id/confirm_password_text"
            android:layout_marginLeft="90dp"
            android:layout_weight="100"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            />

